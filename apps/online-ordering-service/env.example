# Online Ordering Service Environment Variables
NODE_ENV=development
PORT=3006

# Database
DATABASE_URL="mysql://username:password@localhost:3306/tovocl_app"

# JWT Configuration (for authentication)
JWT_SECRET=your-super-secret-jwt-key-here

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Cart Configuration
CART_EXPIRY_HOURS=24
CART_MAX_ITEMS=50
CART_MAX_QUANTITY_PER_ITEM=10

# Order Configuration
ORDER_TIMEOUT_MINUTES=30
ORDER_CONFIRMATION_REQUIRED=true
ORDER_PREPARATION_TIME_MINUTES=20

# Delivery Configuration
DELIVERY_RADIUS_KM=10
DELIVERY_FEE_BASE=2000
DELIVERY_FEE_PER_KM=500
DELIVERY_FREE_THRESHOLD=25000
DELIVERY_ESTIMATED_TIME_MINUTES=30

# Payment Configuration
PAYMENT_METHODS=efectivo,tarjeta,transferencia
PAYMENT_TIMEOUT_MINUTES=15

# Menu Configuration
MENU_CACHE_TTL=300
MENU_ITEMS_PER_PAGE=20
MENU_SEARCH_RESULTS_LIMIT=50

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=true

# Logging
LOG_LEVEL=info
