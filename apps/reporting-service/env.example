# Reporting & Analytics Service Environment Variables
NODE_ENV=development
PORT=3008

# Database
DATABASE_URL="mysql://username:password@localhost:3306/tovocl_app"

# JWT Configuration (for authentication)
JWT_SECRET=your-super-secret-jwt-key-here

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Reporting Configuration
REPORT_CACHE_TTL=300
REPORT_MAX_RECORDS=10000
REPORT_EXPORT_LIMIT=5000
REPORT_SCHEDULE_ENABLED=true

# Export Configuration
EXPORT_FORMATS=xlsx,pdf,csv
EXPORT_MAX_SIZE_MB=50
EXPORT_RETENTION_DAYS=30

# Analytics Configuration
ANALYTICS_REAL_TIME_ENABLED=true
ANALYTICS_AGGREGATION_INTERVAL=300
ANALYTICS_RETENTION_DAYS=365

# Performance Metrics
PERFORMANCE_METRICS_ENABLED=true
PERFORMANCE_ALERT_THRESHOLD=80
PERFORMANCE_CHECK_INTERVAL=60

# Data Export
EXPORT_STORAGE_PATH=./exports
EXPORT_CLEANUP_SCHEDULE=0 2 * * *
EXPORT_NOTIFICATION_EMAIL=admin@tovocl.com

# Chart Configuration
CHART_DEFAULT_COLORS=#3B82F6,#EF4444,#10B981,#F59E0B,#8B5CF6
CHART_MAX_POINTS=1000
CHART_ANIMATION_ENABLED=true

# Logging
LOG_LEVEL=info
